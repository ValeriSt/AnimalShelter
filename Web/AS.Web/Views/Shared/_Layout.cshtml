<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AS.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <style>
        h1, h2, h3, h4, h5, h6, p, a {
            color: black;
        }
        .container {
            color: black;
        }

        .footer {
            background-color: white;
            border-color: floralwhite;
            position: fixed;
            bottom: 0;
        }

        nav {
            width: 60%;
            margin-left: 20%;
        }


        body {
            background-image: url("https://i.pinimg.com/originals/8e/b6/10/8eb610a06195f2872b1cbcbab1bd11c6.png");
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-position: right;
            background-color: white;
            margin-bottom: 40%;
        }
    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">AnimalShelter</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">


                        @if (!this.User.Identity.IsAuthenticated)
                        {
                            <div class="collapse navbar-collapse d-flex justify-content-end" id="navbarNav">
                                <li class="nav-item active">
                                    <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Login</a>
                                </li>
                                <li class="nav-item active">
                                    <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Register</a>
                                </li>
                            </div>
                        }
                        else
                        {
                            @*<li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                                </li>*@
                            <li class="nav-item active">
                                <a class="nav-link" asp-controller="Animals" asp-action="Index">Posts</a>
                            </li>
                            <li class="nav-item active">
                                <a class="nav-link" asp-controller="Events" asp-action="Index">Events</a>
                            </li>
                            <li class="nav-item active">
                                <a class="nav-link" asp-controller="Role" asp-action="Index">Roles</a>
                            </li>
                            <div class="collapse navbar-collapse d-flex justify-content-end" id="navbarNav">
                                <li class="nav-item active">
                                    <a class="nav-link" asp-area="Identity" asp-page="/Account/Logout">Logout</a>
                                </li>
                            </div>

                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
        <footer class="border-top footer text-muted">
            <div class="container">
                &copy;<a asp-area="" asp-controller="Home" asp-action="Privacy">Rules</a>
            </div>
        </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>

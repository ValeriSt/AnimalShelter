@using AS.Web.Controllers
@model IEnumerable<AnimalsIndexViewModel>
@{
    ViewData["Title"] = "View";

}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>

        .rectangle {
            position: absolute;
            height: auto;
            width: 60%;
            left: 20%;
            background-color: white;
            z-index: -1;
            border: 1px solid;
            box-shadow: 5px 5px #888888;
        }

        #button {
            position: absolute;
            left: 22%;
        }

        .reposition {
            margin-top: 5%;
        }

        body {
            padding-bottom: 15%;
        }

        .txt {
            text-align: center;
        }

        img {
            display: block;
            margin-left: auto;
            margin-right: auto;
        }
    </style>

</head>

<body>
    <p id="button" class="w-75 m-auto p-1">
        <a class="btn btn-outline-success " asp-action="Create">Create New</a>
    </p>
    <div class="rectangle">
        <div class="reposition">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="w-3 p-3 m-auto">
                        <div class="card">
                            <div class="card__side card__side--front-1">
                                <div class="card__details">
                                    <img src="@item.ImageUrl" width="150" height="150" />
                                    <p class="txt">Name: @item.Name</p>
                                    <p class="txt">Status: @item.Status</p>
                                    <p class="txt">Location: @item.Location</p>
                                    <div class="d-flex flex-grow-1 align-items-end justify-content-end">
                                        <a class="btn btn-info m-1" asp-controller="Animals" asp-action="Details" asp-route-id="@item.Id">Details</a>

                                        @if (item.IsAuthorized)
                                        {
                                            <a class="btn btn-success m-1" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                            <a class="btn btn-danger m-1" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</body>
</html>